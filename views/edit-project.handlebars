<div class="jumbotron">
  <h1 class="display-4">Edit {{project.title}}</h1>
  <hr class="my-4">
  <a href="/dashboard"> &larr; Back to Your Projects</a>
    <form class="edit-project-form my-2 p-2">
        <div class="form-group row">
            <label for="project-title" class="col-sm-2 col-form-label font-weight-bold">Title</label>
            <div class="col-sm-12">
                <input name="project-title" class="form-control" type="text" value="{{project.title}}" />
            </div>
        </div>
        <div class="form-group row">
            <label for="project-body"class="col-sm-2 col-form-label font-weight-bold">Description</label>
            <div class="col-sm-12">
                <textarea name = "project-body" class="form-control" type = "text" value = "{{project.description}}">{{project.description}}</textarea>
            </div>
        </div>
        <div>
            You created this project on {{format_date project.created_at}}
            |
            <a href="/project/{{project.id}}">{{project.contributions.length}} {{format_plural "Contribution" project.contributions.length}}</a>
        </div>
        <hr class="my-4">
        <p class="lead">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary btn-lg">Update Project</button>
            </div>
        </p>
    </form>
</div>
<script src="/javascript/edit-project.js"></script>