<form class = "login-form p-4">
  <h2 class = "text-center font-weight-bold">Login to an account</h2>
  <div class="form-group row">
    <label for="email-login" class="col-sm-2 col-form-label font-weight-bold"><img src="https://img.icons8.com/ultraviolet/32/000000/email-open.png"/> Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email-login" placeholder="Email">
    </div>
  </div>
  <div class="form-group row">
    <label for="password-login" class="col-sm-2 col-form-label font-weight-bold"><img src="https://img.icons8.com/ultraviolet/32/000000/forgot-password.png"/> Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="password-login" placeholder="Password">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-primary btn-block font-weight-bold">LOGIN <img src="https://img.icons8.com/cotton/28/000000/circled-left--v1.png"/></button>
    </div>
  </div>
</form>
<script src="/javascript/login.js"></script>



