<article class="project">
  <div class="title">
    <h4>{{title}}</h2>
    <p>
      {{description}}
    </p>
  </div>
  <div class="meta">
    Published by {{user.username}} on {{format_date created_at}}
    |
    <a href="/project/{{id}}">{{contributions.length}} {{format_plural "Contribution" contributions.length}}</a>
  </div>
</article>

<script>
    var ctx = document.getElementById('myChart');
    var myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['HTML', 'CSS', 'JavaScript'],
            datasets: [{
                label: '# of Votes',
                data: [35, 15, 50],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                ],
                borderWidth: 1
            }]
        }
    });
</script>
