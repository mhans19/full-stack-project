<form class = "signup-form">
  <h2 class = "text-center font-weight-bold">Sign up for an account</h2>
  <div class="form-group row">
    <label for="username-signup" class="col-sm-2 col-form-label font-weight-bold"><img src="https://img.icons8.com/ultraviolet/36/000000/change-user-male.png"/> Username</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="username-signup" placeholder="Username">
    </div>
  </div>
  <div class="form-group row">
    <label for="email-signup" class="col-sm-2 col-form-label font-weight-bold"><img src="https://img.icons8.com/ultraviolet/32/000000/email-open.png"/> Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email-signup" placeholder="Email">
    </div>
  </div>
  <div class="form-group row">
    <label for="password-signup" class="col-sm-2 col-form-label font-weight-bold"><img src="https://img.icons8.com/ultraviolet/32/000000/forgot-password.png"/> Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="password-signup" placeholder="Password">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <button type="submit" class="btn btn-primary btn-block font-weight-bold">SIGNUP <img src="https://img.icons8.com/cotton/28/000000/circled-left--v1.png"/></button>
    </div>
  </div>
</form>
<script src="/javascript/signup.js"></script>